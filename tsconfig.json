{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"$comp/*": ["src/comp/*"],
			"$comp": ["src/comp"],
			"$const/*": ["src/const/*"],
			"$const": ["src/const"],
			"$i18n/*": ["src/i18n/*"],
			"$i18n": ["src/i18n"],
			"$style/*": ["src/style/*"],
			"$style": ["src/style"],
			"$theme/*": ["src/theme/*"],
			"$theme": ["src/theme"],
			"$type/*": ["src/type/*"],
			"$type": ["src/type"],
			"$util/*": ["src/util/*"],
			"$util": ["src/util"]
		},
		"strict": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"verbatimModuleSyntax": false,
		"lib": ["DOM", "ESNext", "DOM.Iterable"],
		"module": "ESNext",
		"target": "ESNext",
		"types": ["svelte"]
	},
	"include": ["src/**/*"]
}
